<Window x:Class="Inventory.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Inventory.WPF"
        Title="Inventory" Height="800" Width="1400">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="130" />
            <Setter Property="Width" Value="300"/>
        </Style>

    </Window.Resources>

    <Viewbox HorizontalAlignment="Left" Stretch="Fill">
        <TabControl TabStripPlacement="Left" Height="770" Width="1392">
            <TabItem Header="Home" Content="Testing"/>
            <TabItem Header="Pantry">
                <local:PantryControl/>
            </TabItem>
            <TabItem Header="Recipes">
                <local:RecipeControl/>
            </TabItem>
            <TabItem Header="Planner">
                <local:PlannerControl/>
            </TabItem>
            <TabItem Header="Shopping List">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Random" Margin="0,-10,0,10">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Viewbox>
</Window>
