<Window x:Class="Inventory.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Inventory.WPF"
        Title="Inventory" Height="800" Width="1400">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="130" />
            <Setter Property="Width" Value="300"/>
        </Style>

    </Window.Resources>

    <Grid>
        <TabControl HorizontalAlignment="Left" Width="1392" TabStripPlacement="Left">
            <TabItem Header="Home">
                Testing
            </TabItem>
            <TabItem Header="Pantry">
                <local:PantryControl/>
            </TabItem>
            <TabItem Header="Recipes">
                <local:RecipeControl/>
            </TabItem>
            <TabItem Header="Planner">
                <local:PlannerControl/>
            </TabItem>
            <TabItem Header="Shopping List">
                <local:ShoppingListControl/>
            </TabItem>
            <TabItem Header="Random" Margin="0,-10,0,10">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
