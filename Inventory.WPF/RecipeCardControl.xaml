<UserControl x:Class="Inventory.WPF.RecipeCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <Canvas x:Name="titlePanel" Visibility="Visible" Background="#003D0D" Margin="0,0,0,250">
            <Label x:Name="lblTitle" Content="{Binding Name}" Canvas.Left="10" Canvas.Top="5" FontSize="25" Foreground="#B1C7B6"/>
        </Canvas>
        <Canvas x:Name="descriptionPanel" Visibility="Visible" Background="#568E62" Margin="0,50,0,0">
            <Label x:Name="lblDescription" Content="{Binding Description}"  VerticalAlignment="Top" Canvas.Left="10" Canvas.Right ="10"  Canvas.Top="5" Canvas.Bottom="5" FontSize="18"/>
        </Canvas>
    </Grid>
</UserControl>
