<UserControl x:Class="Inventory.WPF.RecipeCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="255" d:DesignWidth="500">
    <Canvas x:Name="recipeCard">
        <Canvas x:Name="titlePanel" Visibility="Visible" Background="#003D0D" Width="500" Height="50">
            <TextBlock x:Name="lblTitle" Text="{Binding Name}" Padding="10 5 10 5" FontSize="25" Foreground="#B1C7B6" />
        </Canvas>
        <Canvas x:Name="descriptionPanel" Visibility="Visible" Background="#568E62" Margin="0,50,0,0" Width="500" Height="205">
            <TextBlock x:Name="lblDescription" Text="{Binding Description}" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" MaxWidth="{Binding ElementName=descriptionPanel, Path=ActualWidth}" Padding="10 10 10 10"/>
        </Canvas>
    </Canvas>
</UserControl>
